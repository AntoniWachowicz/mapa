# Database
MONGODB_URI=mongodb://localhost:27017/mapa_svelte

# Authentication
# IMPORTANT: Use strong, unique credentials in production
# AUTH_USERNAME: Admin username (avoid common names like 'admin')
# AUTH_PASSWORD: Min 16 characters, mixed case, numbers, symbols
# AUTH_SECRET: Min 32 characters, use: openssl rand -base64 32
AUTH_USERNAME=your_admin_username
AUTH_PASSWORD=your_strong_password_here
AUTH_SECRET=your_jwt_secret_min_32_chars_here

# Optional: Node environment
NODE_ENV=development
